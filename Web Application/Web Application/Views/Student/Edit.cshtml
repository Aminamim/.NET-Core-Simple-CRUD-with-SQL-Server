@model Web_Application.Models.StudentInfo
<div>
    <form role="form" action="/Student/Edit" method="post">

        <input type="number" name="StudentId" value="@Model.StudentId" class="d-none">

        <div class="form-group">
            <label>Student Name</label>
            <input type="text" class="form-control" id="name" name="StudentName" value="@Model.StudentName">

        </div>
        <div class="form-group">
            <label>Department</label>
            <input type="text" class="form-control" id="dept" name="Department" value="@Model.Department">
        </div>
        <div class="form-group">
            <label>Address</label>
            <input type="text" class="form-control" id="add" name="Address" value="@Model.Address">

        </div>
        <input type="submit" class="btn btn-success">
    </form>


</div>
