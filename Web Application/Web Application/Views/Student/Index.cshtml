@model Web_Application.Models.StudentInfo
<div>
    <form role="form" action="/Student/Add" method="post">


        <div class="form-group">
            <label>Student Name</label>
            <input type="text" class="form-control" id="name" name="StudentName">

        </div>
        <div class="form-group">
            <label>Department</label>
            <input type="text" class="form-control" id="dept" name="Department">
        </div>
        <div class="form-group">
            <label>Address</label>
            <input type="text" class="form-control" id="add" name="Address">

        </div>
        <input type="submit" class="btn btn-success">
    </form>


</div>